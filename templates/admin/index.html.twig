{% extends 'base.html.twig' %}

{% block title %}Adminitration du site - Les Ecrits de Lyndia{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1 class="titlePost">Administration du site</h1>
    <div class="btnHomeContainer">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}<a href="#offcanvasExample" class="home"data-bs-toggle="offcanvas" role="button" aria-controls="offcanvasExemple"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
</svg> Menu</a>{% else %}<a href="{{ path('app_home') }}" class="home"> Page d'accueil <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
  <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z"/>
  <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z"/>
</svg></a>
    {% endif %}
    </div>
    <div class="article">
        <div class ="category">
            <h2> Gestion des Articles </h2>
            <ul>
                <li>
                    <a href="{{ path('app_admin_article_index') }}">Voir tous les articles</a>
                </li>    
                
                <li>
                    <a href="{{ path('app_admin_article_new') }}">Ecrire un article</a>
                </li>
            </ul>        
        </div>
        <div class ="category">
            <h2> Gestion des Commentaires </h2>
            <ul>
                <li>
                    <a href="{{ path('app_admin_comment_index') }}">Voir les commentaires</a>
                </li>
            </ul>
        </div>
        <div class ="category">
            <h2> Gestion des Histoires </h2>
            <ul>
                <li>
                    <a href="{{ path('app_admin_story_index') }}">Voir toutes les histoires</a>
                </li>
                <li>
                    <a href="{{ path('app_admin_story_new') }}">Poster une nouvelle histoire</a>
                </li>
                <li>
                    <a href="{{ path('app_admin_chapter_index') }}">Voir les chapitres</a>
                </li>
                <li>
                    <a href="{{ path('app_admin_chapter_new') }}">Ecrire un nouveau chapitre</a>
            </ul>
        </div>
        <div class ="category">
            <h2> Gestion des utilisateurs </h2>
            <ul>
                <li>
                    <a href="{{ path('app_admin_user_index') }}">Liste des utilisateurs</a>
                </li>
            </ul>    
        </div>
        <div class ="category">
            <h2> Message des internautes </h2>
            <ul>
                <li>
                    <a href="{{ path('app_admin_contact_index') }}">Accèder aux demandes</a>
                </li>
            </ul>    
        </div>
        <div class ="category">
            <h2> Participations aux concours </h2>
            <ul>
                <li>
                <a href="{{ path('app_admin_writing_index') }}">Toutes les participations aux concours</a>
                </li>
            </ul>    
        </div>
        
    </div>    



    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
     
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">{{ app.user.userPseudo }}</h2>
    
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    
        </div>
    
        <div class="offcanvas-body">
            <div class="listgroup">
                <a href="{{ path('app_home') }}"class="list-group-item list-group-item-action">Accueil</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_user_show') }}"class="list-group-item list-group-item-action">Mon profil</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_private_mess') }}"class="list-group-item list-group-item-action ">Boîte de réception</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_library_show',  {'id':library.id}) }}"class="list-group-item list-group-item-action ">Ma bibliothèque</a>
            </div>
            {% if is_granted("ROLE_ADMIN") %}
                
                <div class="listgroup">
                    <a href="{{ path('app_admin') }}" class="list-group-item list-group-item-action">Administration</a>
                </div>
            {% endif %}
            <div class="listgroup">
                <a href="{{ path('app_logout') }}"class="list-group-item list-group-item-action ">Se deconnecter</a>
            </div>

        </div>
    </div>
{% endblock %}
