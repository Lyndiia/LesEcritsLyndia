{% extends 'base.html.twig' %}

{% block title %}Messagerie privée - Les Ecrits de Lyndia{% endblock %}

{% block body %}

{% for message in app.flashes('message') %}
<div class="alert alert-sucess alert-dismissible fade show" role="alert">
{{message}}
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endfor %}


    <h1 class="titlePost">Messagerie Privée</h1>
    <div class="bloc">
            
        <p class="label">Message(s) reçu(s): {{ app.user.received|length }} </p>
            
        <a href="#offcanvasExample" class="btn" data-bs-toggle="offcanvas" role="button" aria-controls="offcanvasExemple">Menu Messagerie</a>
        <a href="{{ path('app_send') }}" class="btn" style="color:#262526">Envoyer un message</a>
    
    </div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
     
        <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h2>
    
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    
    </div>
    
    <div class="offcanvas-body">
        <div class="listgroup">
            <a href="{{ path('app_private_mess') }}"class="list-group-item list-group-item-action active">Accueil</a>
        </div>
        <div class="listgroup">
            <a href="{{ path('app_received') }}"class="list-group-item list-group-item-action">Boîte de récéption</a>
        </div>
        <div class="listgroup">
            <a href="{{ path('app_sent') }}"class="list-group-item list-group-item-action">Message(s) envoyé(s)</a>
        </div>
        <div class="listgroup">
            <a href="{{ path('app_home') }}"class="list-group-item list-group-item-action">Accueil du site</a>
        </div>
        <div class="listgroup">
            <a href="{{ path('app_user_show') }}"class="list-group-item list-group-item-action">Mon profil</a>
        </div>
         {% if is_granted("ROLE_ADMIN") %}
                
                <div class="listgroup">
                    <a href="{{ path('app_admin') }}" class="list-group-item list-group-item-action">Administration</a>
                </div>
        {% endif %}
        <div class="listgroup">
            <a href="{{ path('app_logout') }}"class="list-group-item list-group-item-action ">Se deconnecter</a>
        </div>

    </div>
  </div>
{% endblock %}
