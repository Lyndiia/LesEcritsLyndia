{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="titlePost">Mon profil</h1>
    <div class="btnHomeContainer">
        <a href="#offcanvasExample" class="home"data-bs-toggle="offcanvas" role="button" aria-controls="offcanvasExemple"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
        </svg>Menu</a>
    </div>

    <div class="article">
            <p class="pseudo">{{ user.userPseudo }}</p>
        <div class="profil">
            <div class = "infos">   
                <div class="info">
                    <h2>mon Email : </h2>
                    <p>{{ user.email }}</p>
                </div>
                <div class="info">
                    <h2>Mon nom : </h2>
                    <p>{{ user.userName }}</p>
                </div>

                <div class="info">
                    <h2>Mon genre préféré : </h2>
                    <p>{{ info.infoGenre }}</p>
                </div>
                <div class="info">
                    <h2>Mon type de livre préféré : </h2>
                    <p>{{ info.infoType }}</p>
                </div>
                <div class="info">
                    <h2>Ma description : </h2>
                    <p>{{ info.infoDesc }}</p>
                </div>
            </div>

            <div class="profilpics">
                <div class="info ">
                    <p>{% if info.infoPic %}
                    <img src="{{ asset('build/images/' ~ info.infoPic) }}" alt="Photo de profil">
                    {% endif %}</p>
                </div>
            </div>    
        </div>    
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier mon compte</a>
        <a href="{{ path('app_infos_edit', {'id': info.id}) }}">Modifier mes informations</a>
    

        {{ include('user/_delete_form.html.twig') }}
        
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
     
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">{{ app.user.userPseudo }}</h2>
    
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    
        </div>
    
        <div class="offcanvas-body">
            <div class="listgroup">
                <a href="{{ path('app_home') }}"class="list-group-item list-group-item-action ">Accueil</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_user_show') }}"class="list-group-item list-group-item-action active">Mon profil</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_private_mess') }}"class="list-group-item list-group-item-action ">Boîte de réception</a>
            </div>
            <div class="listgroup">
                <a href="{{ path('app_library_show',  {'id':library.id}) }}"class="list-group-item list-group-item-action ">Ma bibliothèque</a>
            </div>
            {% if is_granted("ROLE_ADMIN") %}
                
                <div class="listgroup">
                    <a href="{{ path('app_admin') }}" class="list-group-item list-group-item-action">Administration</a>
                </div>
            {% endif %}
            <div class="listgroup">
                <a href="{{ path('app_logout') }}"class="list-group-item list-group-item-action ">Se deconnecter</a>
            </div>

        </div>
    </div>

{% endblock %}
