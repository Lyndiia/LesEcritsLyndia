{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

                <h1 class="titlePost">Inscription</h1>
                <div class="bloc">
                {{ form_errors(registrationForm) }}
            
                {{ form_start(registrationForm, {'attr': {'style': 'width: 80%; margin: 0 auto;' }}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'resize: none;'}}) }}
                    {{ form_row(registrationForm.user_name) }}
                    {{ form_row(registrationForm.user_pseudo) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}
            
                    <button type="submit" class="btn" >S'inscrire</button>
                {{ form_end(registrationForm) }}
                </div>


{% endblock %}
